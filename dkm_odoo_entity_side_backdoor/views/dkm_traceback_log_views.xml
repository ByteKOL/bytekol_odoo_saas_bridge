<odoo>
    <record id="dkm_traceback_log_tree_view" model="ir.ui.view">
        <field name="name">dkm.traceback.tree.view</field>
        <field name="model">dkm.traceback.log</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="create_date" />
                <field name="code" />
            </tree>
        </field>
    </record>

    <record id="dkm_traceback_log_form_view" model="ir.ui.view">
        <field name="name">dkm.traceback.log.form.view</field>
        <field name="model">dkm.traceback.log</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="active" invisible="1" />
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="user_trigger_id"/>
                        </group>
                        <group>
                            <field name="create_date"/>
                            <field name="related_record"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Traceback" name="traceback">
                            <pre>
                                <field name="traceback" />
                            </pre>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="dkm_traceback_log_search_view" model="ir.ui.view">
        <field name="name">dkm.traceback.log.search.view</field>
        <field name="model">dkm.traceback.log</field>
        <field name="arch" type="xml">
            <search>
                <field name="code" />
                <field name="name"/>
                <field name="create_date"/>

                <filter name="ftr_inactive" string="Archived" domain="[('active', '=', False)]"/>
                <separator/>

                <group string="Group By">
                    <filter string="User Trigger" name="grp_user_trigger" context="{'group_by': 'user_trigger_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="dkm_traceback_log_window" model="ir.actions.act_window">
        <field name="name">DKM Traceback Log</field>
        <field name="res_model">dkm.traceback.log</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
